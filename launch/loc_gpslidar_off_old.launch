<?xml version="1.0"?>
<launch>

  <!-- rosbags list -->
  <arg name="bag_file_1" default="/home/mice85/aurova-lab/labrobotica/dataset/2021-12-00\ Experimentos\ JFR/loop_1.bag"/>
  <arg name="bag_file_11" default="/home/mice85/aurova-lab/labrobotica/dataset/2021-02-26\ Experimentos\ RAL/2021-02-26-11-29-37.bag"/>
 
  <!-- parameters loading -->
  <rosparam command="load" file="$(find applications)/params/loc_gpslidar_off.yaml" />
  
  <!-- select your robot -->
  <include file="$(find robot_blue)/launch/components/start_tf.launch" />

  <!-- LPP, GPP, and utm -> map transformation -->
  <node name="global_planning" pkg="global_planning" type="global_planning" output="screen" >
      <remap from="pose_plot" to="gps_odom_optimization/localization" />
  </node>
  <node name="local_planning" pkg="local_planning" type="local_planning" output="screen" >
      <remap from="pose_plot" to="gps_odom_optimization/localization" />
  </node>

  <!-- GPS observations in odometry format -->
  <node pkg="gps_to_odom" type="gps_to_odom" name="gps_to_odom" output="screen">
    <remap from="fix" to="rover/fix" />
  </node>
  
    <!-- velodyne preprocess -->
  <include file="$(find pc2image)/launch/VLP16_image.launch" />
  
  <!-- lidar odometry -->
  <include file="$(find odom_estimation_pc)/launch/odomEstimation_VLP16.launch" />  
  <!-- <include file="$(find ackermann_to_odom)/launch/start_odometry.launch" /> -->
  
  
  <!-- Fusion-based localization by optimization process -->
  <include file="$(find gps_odom_optimization)/launch/node.launch" />

  <!-- node for decoded velodyne packages -->
  <include file="$(find robot_blue)/launch/components/start_velodyne.launch" />  

  <node pkg="rosbag" type="play" name="rosbagplay" args="$(arg bag_file_11) --clock -d 5" required="true" />
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find applications)/rviz/localization.rviz" />
  
</launch>
