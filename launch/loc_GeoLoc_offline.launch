<?xml version="1.0"?>
<launch>

  <!-- rosbags list -->
  <arg name="bag_file_1" default="/home/mice85/aurova-lab/labrobotica/dataset/2023-03-06_loc_and_plann/2023-03-06-15-37-47.bag"/>
  <arg name="bag_file_2" default="/home/mice85/aurova-lab/labrobotica/dataset/2023-03-16_circuit02_no-rtk/2023-03-16-11-25-17.bag"/>
  
  <!-- parameters loading -->
  <rosparam command="load" file="$(find applications)/params/loc_GeoLoc_offline.yaml" />

  <!-- select your robot -->
  <include file="$(find robot_blue)/launch/components/start_tf.launch" />
  
  <!-- Fusion-based localization by optimization process -->
  <include file="$(find geo_localization)/launch/node.launch" />

  <!-- GPS observations in odometry format -->
  <node pkg="gps_to_odom" type="gps_to_odom" name="gps_to_odom" output="screen">
  </node>
  
  <!-- lidar odometry -->
  <include file="$(find pc2image)/launch/ouster_image.launch" />
  <include file="$(find odom_estimation_pc)/launch/odomEstimation_ouster.launch" />   

  <!-- Nodes to ground lines detection -->
  <node pkg="merged_channels_ouster" name="merge_channels" type="merge_channels_ouster.py"></node>
  <include file="$(find image2pcl)/launch/image2pcl.launch" />

  <node pkg="rosbag" type="play" name="rosbagplay" args="$(arg bag_file_1) --clock -d 5" required="true" />
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find applications)/rviz/nav_geoloc.rviz" />
  
</launch>
